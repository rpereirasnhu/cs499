doctype html 
html(lang='en')
    head
        title Delete Process
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        meta(name='author' content='Ryan Pereira')
        meta(charset='UTF-8')
        link(rel='stylesheet' type='text/css' href='/css/global.css')
    body
        include includes/header.pug
        div#main-content
            h1 Delete Process
            div#procModRes
                p
            form(onsubmit='return deleteProcess()')
                div.margin-bottom-small
                    label(for='in-pid') Process ID
                    input#in-pid(type='number' name='pid' required)
                div
                    input(type='submit' value='Submit')
        script(type='text/javascript' src='/scripts/procmod.mjs')
